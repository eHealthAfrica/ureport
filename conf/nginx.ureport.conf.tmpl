server {
    listen       80;
    server_name  {{ hostname }}; 


    location /sitestatic/ {
        alias /var/www/static/;
    }

    location / {
        {{ basic_auth }}
        include uwsgi_params;
        uwsgi_pass  unix:/var/run/uwsgi.sock;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
